<div class="container">

  <h2 class="hokkaido-title">北海道</h2>

  <div class="new-post">
    <%= link_to new_hokkaido_path do %>
      <i class="fas fa-plus-square icon fa-2x"></i>
    <% end %>
  </div>

  <table border="1">
    <thead>
      <tr>
        <th>タイトル</th>
        <th>評価</th>
        <th>内容</th>
        <th>投稿日</th>
      </tr>
    </thead>
    <tbody>
      <% @hokkaidoes.each do |hokkaido| %>
        <tr>
          <td><%= hokkaido.title %></td>
          <td class="hokkaido-evaluation" data-score="<%= hokkaido.evaluation %>"></td>
          <td>
            <details class="caption-show">
              <summary>詳細を開く</summary>
              <%= simple_format(hokkaido.caption) %>
            </details>
          </td>
          <td><%= hokkaido.created_at.strftime('%Y年%m月%d日') %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <script>
    $('.hokkaido-evaluation').raty({
      readOnly: true,
      starOn: "<%= asset_path('star-on.png') %>",
      starOff: "<%= asset_path('star-off.png') %>",
      starHalf: "<%= asset_path('star-half.png') %>",
      score: function() {
        return $(this).attr('data-score');
      }
    });
  </script>

</div>